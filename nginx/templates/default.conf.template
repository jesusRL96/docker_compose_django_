upstream web {
	server web:8000;
}

server {
	listen ${NGINX_PORT};

	location /static/ {
		alias /code/static/;
	}
	location / {
		proxy_pass  http://web;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header Upgrade $http_updrade;
		proxy_set_header Connection "Upgrade";
		proxy_set_header Host $host;
	}
}
